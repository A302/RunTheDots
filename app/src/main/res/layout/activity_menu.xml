<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RuntheDots">

    <TextView android:text="@string/Runthedots" android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nyt Spil"
        android:id="@+id/nytspilButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:onClick="NytSpilonClick"
        android:textSize="25sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hvordan du spiller"
        android:id="@+id/hvordanduspillerButton"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/nytspilButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="HowtoPlayonClick"
        android:textSize="25sp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="x3"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:backgroundTint="#ffffcc03"
        android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
        android:layout_alignTop="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Stjerner ialt"
        android:id="@+id/OverallScoretext"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="38sp" />

</RelativeLayout>