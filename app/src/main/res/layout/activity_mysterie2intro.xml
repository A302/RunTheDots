<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yourdomain.runthedots.Mysterie2intro"
    android:background="@mipmap/background">




    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="@string/start_game"
        android:id="@+id/button"
        android:layout_marginBottom="60dp"
        android:textSize="50sp"
        android:onClick="Startgame2"
        android:background="@mipmap/start1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Mysterie2title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Mysterie 2"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:id="@+id/mysterie2text"
        android:layout_below="@+id/Mysterie2title"
        android:layout_centerHorizontal="true"
        android:text="@string/Mysterie2Intro"
        android:textSize="35sp"
        android:textColor="#ff000000" />

</RelativeLayout>


