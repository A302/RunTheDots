<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RuntheDots"
    android:background="@mipmap/background">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Nyt Spil"
        android:id="@+id/nytspilButton"
        android:onClick="NytSpilonClick"
        android:textSize="25sp"
        android:background="@mipmap/newgame"
        android:adjustViewBounds="false"
        android:layout_above="@+id/hvordanduspillerButton"
        android:layout_alignLeft="@+id/hvordanduspillerButton"
        android:layout_alignStart="@+id/hvordanduspillerButton" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3 x"
        android:textSize="40dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFF200"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Hvordan du spiller"
        android:id="@+id/hvordanduspillerButton"
        android:onClick="HowtoPlayonClick"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:background="@mipmap/instructions"
        android:adjustViewBounds="false"
        android:layout_gravity="left"
        android:layout_above="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:background="@mipmap/logo"
        android:layout_above="@+id/nytspilButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView5"
        android:background="@mipmap/not"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView6"
        android:background="@mipmap/star"
        android:layout_below="@+id/hvordanduspillerButton"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>