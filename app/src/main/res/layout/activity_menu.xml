<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RuntheDots"
    android:background="@mipmap/background">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nyt Spil"
        android:id="@+id/nytspilButton"
        android:onClick="NytSpilonClick"
        android:textSize="25sp"
        android:clickable="false"
        android:layout_alignWithParentIfMissing="false"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:nestedScrollingEnabled="false"
        android:background="@mipmap/newgame"
        android:layout_above="@+id/hvordanduspillerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hvordan du spiller"
        android:id="@+id/hvordanduspillerButton"
        android:onClick="HowtoPlayonClick"
        android:textSize="25sp"
        android:background="@mipmap/how"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nytspilButton"
        android:layout_alignStart="@+id/nytspilButton"
        android:layout_marginBottom="50dp"
        android:layout_alignRight="@+id/nytspilButton"
        android:layout_alignEnd="@+id/nytspilButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:backgroundTint="#ffffcc03"
        android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/hvordanduspillerButton"
        android:layout_alignEnd="@+id/hvordanduspillerButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_above="@+id/nytspilButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp"
        android:background="@mipmap/logo" />

</RelativeLayout>